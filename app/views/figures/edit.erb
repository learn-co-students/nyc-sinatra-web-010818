<h1>Edit New Figure</h1>

<form action="/figures/<%=@figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">


  <h2>Select Titles</h2>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>

  <h2>Create a New Title</h2>
  <input type="text" name="title[name]" placeholder="new title" id="new_title">

  <h2>Select Landmarks</h2>
    <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"<%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
    <% end %>

  <h2>Create a New Landmark</h2>
  <input type="text" name="landmark[name]" placeholder="new landmark" id="new_landmark">
  <input type="text" name="landmark[year_completed]" placeholder="year completed">

  <input type="submit" value="Edit Figure">
</form>
