<h1>Edit a new Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch" id="hidden">

  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <br></br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
      <%= landmark.name %>
      <br>
    </input>
  <% end %>

  <br></br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%= 'checked' if @figure.titles.include?(title) %>>
      <%= title.name %>
      <br>
    </input>
  <% end %>

  <br></br>

  <label>and/or, create a new landmark:</label>
  <br></br>
  <input type="text" name="landmark[name]" id="new_landmark">
    <br></br>
  <label>and/or, create a new title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>



  <input type="submit"  value="Edit Figure">
</form>
