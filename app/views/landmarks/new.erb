<h1>Create New Landmark</h1>

<form action="/landmarks" method="post">
  <p>Name: <input type="text" id="landmark_name" name="landmark[name]"></p>
  <p>Associated Figure:</p>
  <% @figures.each do |f| %>
  <p><input id="checkBox" type="checkbox" name="landmark[figure_id]" value="<%=f.id%>"><%= f.name %></p>
  <% end %>
  <p>Year Completed: <input type="text" id="landmark_year_completed" name="landmark[year_completed]" value=""></p>
  <button type="submit" name="button">Create New Landmark</button>
</form>
