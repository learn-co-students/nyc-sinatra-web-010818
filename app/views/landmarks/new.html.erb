<h1>Create a New Landmark</h1>
<form action="/landmarks" method="post">

  <label for="name">Name:</label>
  <input id="landmark_name" type="text" name="landmark[name]">
  <label for="year_completed">Year Completed:</label>
  <input id="landmark_year_completed" type="integer" name="landmark[year_completed]">

  <p>Select Relevant Figure:
    <select name="figure_id">
      <% @figures.each do |figure| %>
        <option value="<%= figure.id %>"><%= figure.name %></option>
      <% end %>
    </select>
  </p>

  <p>Or Create a New Figure:
    <label for="figure_name">Name:</label>
    <input type="text" name="figure_name">
  </p>

  <input type="submit" id="Create New Landmark" value="Submit">
</form>
